{
	"useTabs": true,
	"printWidth": 80,
	"trailingComma": "all",
	"semi": true,
	"singleQuote": true,
	"overrides": [
		{
			"files": "**/*.{yml,yaml}",
			"options": {
				"singleQuote": false,
				"useTabs": false,
				"tabWidth": 2
			}
		},
		{
			"files": "**/*.md",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
